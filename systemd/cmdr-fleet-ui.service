[Unit]
Description=DCM Fleet Web Interface
After=rosbridge-websocket.service
Wants=rosbridge-websocket.service

[Service]
Type=simple
User=developer
WorkingDirectory=/home/developer/ros2_ws/src/commander-fleet/dcm-control
EnvironmentFile=/etc/commander/fleet/fleet.env
ExecStart=/bin/bash -c 'source /opt/ros/kilted/setup.bash && source /home/developer/ros2_ws/install/setup.bash && /usr/bin/node app.js'
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
