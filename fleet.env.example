# DCM Fleet Environment Configuration
# Copy this file to /etc/commander/fleet/fleet.env and customize as needed

# ==============================================================================
# ROS2 Configuration
# ==============================================================================

# ROS2 middleware implementation (use Zenoh for fleet communication)
RMW_IMPLEMENTATION=rmw_zenoh_cpp

# ROS2 distribution name
ROS_DISTRO=kilted

# ROS domain ID (default 0, change if running multiple ROS2 networks)
ROS_DOMAIN_ID=0

# ==============================================================================
# DCM Paths
# ==============================================================================

# Root directory for DCM application
DCM_DIR=/opt/commander/fleet/dcm-control

# Configuration directory
CONFIG_DIR=/etc/commander/fleet

# Log directory
LOG_DIR=/var/log/commander/fleet

# ==============================================================================
# Zenoh Configuration
# ==============================================================================

# Zenoh session configuration file
ZENOH_SESSION_CONFIG_URI=/opt/commander/fleet/dcm-control/config/zenoh/session-config.json5

# Zenoh router address (leave empty for default localhost)
# ZENOH_ROUTER=tcp/localhost:7447

# ==============================================================================
# Application Configuration
# ==============================================================================

# Web interface port
APP_PORT=8090

# Node environment (development, production)
NODE_ENV=production

# Enable debug logging (true/false)
DEBUG=false

# ==============================================================================
# Hardware Configuration
# ==============================================================================

# CAN interface for hardware communication
CAN_INTERFACE=can0

# CAN bitrate (1000000 = 1Mbps)
CAN_BITRATE=1000000

# ==============================================================================
# Kiosk Configuration
# ==============================================================================

# URL for kiosk display
KIOSK_URL=http://localhost:8090

# Kiosk user (for auto-login)
KIOSK_USER=developer
